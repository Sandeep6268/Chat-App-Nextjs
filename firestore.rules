rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary development rules - tighten for production
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Or better, use authenticated access:
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}